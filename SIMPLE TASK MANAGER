// app.js - Simple Task Manager

const fs = require('fs');

const tasks = [];

function addTask(task) {
    tasks.push({ text: task, completed: false });
    console.log(`âœ… Added: ${task}`);
}

function listTasks() {
    console.log("\nğŸ“Œ Your Tasks:");
    tasks.forEach((task, index) => {
        console.log(`${index + 1}. [${task.completed ? 'âœ”' : ' '}] ${task.text}`);
    });
}

function completeTask(index) {
    if (index >= 0 && index < tasks.length) {
        tasks[index].completed = true;
        console.log(`âœ… Completed: ${tasks[index].text}`);
    } else {
        console.log("âš  Invalid task index.");
    }
}

// Example Usage
addTask("Upload project to GitHub");
addTask("Learn Node.js Basics");
listTasks();
completeTask(0);
listTasks();
